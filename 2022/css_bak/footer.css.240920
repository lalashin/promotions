/*footer*/
footer .footer_wrapper {width: 100%;}
footer .footer_wrapper {padding: 41px 0 53px;
    box-sizing: border-box;background: #f2f2f2;}
footer .footer_upper { position: relative; width:100%; max-width:1176px; height:auto;display: flex; justify-content:space-between; margin:0 auto; }

footer .ft_style span, footer .ft_style em, footer .ft_style a, footer .ft_style b, footer .ft_style p{display:block; font-size:13px; font-weight:400; color:#1d1e1b; letter-spacing:-0.5px; line-height:1;}
footer .left{float:left;}
footer .right{display: flex; width:100%; max-width:280px; padding-top:80px; box-sizing:border-box;}
footer .left .f_info{padding-left:210px; padding-top:12px; background-image:url('/img/f_logo.png'); background-repeat:no-repeat; background-position:0 0;}
footer .left .f_info span{position:relative;}
footer .left .f_info span::before{content:''; display:block; clear:both; width:1px; height:12px; position:absolute; left:0; top:0; background-color:rgba(102, 102, 102, 0.3);}
footer .left .f_info .privacy a{float:left;}
footer .left .f_info .privacy a span{font-weight:500; padding:0 10px; box-sizing:border-box;}
footer .left .f_info .privacy a:first-child span{padding-left:0;}
footer .left .f_info .privacy a:nth-child(2) span{ font-weight: 700;}
footer .left .f_info .privacy a:first-child span::before{display:none;}
footer .left .f_info .privacy a:hover span{color:#164194;}
footer .left .f_info .info_list{margin-top:25px; font-size:0;}
footer .left .f_info .info_list p{margin-top:7px; font-size:0;}
footer .left .f_info .info_list p:first-child{margin-top:0;}
footer .left .f_info .info_list span{display:inline-block; padding:0 7.5px; box-sizing:border-box;}
footer .left .f_info .info_list span:first-child{padding-left:0;}
footer .left .f_info .info_list span:first-child::before{display:none;}

footer .left .f_info .info_list .ft_style span      {color:#a4a4a4;}
footer .left .f_info .info_list .ft_style span .tel {color:#1d1e1b;}

/* 2023-01-20 SNS 추가 */
footer .left .f_info {position: relative;}
footer .left .f_info .info_sns {position:absolute; top: 88px;left: 0; width: 164px; height: 40px; text-align:center;}
footer .left .f_info .info_sns ul{padding:0;display:inline-block;}
footer .left .f_info .info_sns ul:after {content:"";clear:both;}
footer .left .f_info .info_sns li{float: left; width: 32px;height: 32px; }
footer .left .f_info .info_sns li a{display: block; width: 32px; height: 32px;}
footer .left .f_info .info_sns .info_sns_1 {background:url('/img/mian_icon_insta.png');background-position:center center; background-size:cover; margin-right:10px;}
footer .left .f_info .info_sns .info_sns_2 {background:url('/img/mian_icon_pf.png');   background-position:center center; background-size:cover; margin-right:10px;}
footer .left .f_info .info_sns .info_sns_3 {background:url('/img/mian_icon_blog.png?'); background-position:center center; background-size:cover;}

footer .left .f_info .copy p{margin-top:25px; font-weight:300;}
footer .left .f_info .ft_style a{display:inline-block;}

