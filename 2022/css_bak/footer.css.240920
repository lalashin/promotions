@media (max-width: 768px){

     footer .pc{display:none;}
	 footer .mo{display:block;}
     footer .footer_upper {justify-content: center; position: relative;}
	 footer .inner{padding:25px 0 80px 0;}
	 footer .left .f_info{padding-left:0; padding-top:60px; text-align:center;background-image: url(/police/images/miraeij_logo_police.svg); background-size: 45%; }
	 footer .left .f_info .link_area {display: flex; justify-content: space-between;}
	 footer .left .f_info .privacy{display:inline-block; margin-top: 50px;}
	 footer .left .f_info .privacy span{font-size:16px;}
	 footer .left .f_info .info_list{margin-top:17px;}
	 footer .left .f_info .info_list p{margin-top:6px;}
	 footer .left .f_info .info_list p span{line-height:1.2;}
	 footer .left .f_info .info_list p span::before{top:3px;}
	 footer .left .f_info .info_list p span.pic{margin-top:9px; display:block;}
	 footer .left .f_info .info_list p span.pic::before{display:none;}
	 footer .left .f_info .info_list p span.pic2{display:none;}
	 footer .left .f_info .copy p{margin-top:18px; font-size:13px;}
	 footer .right{position: absolute;justify-content: flex-end; top: 47px; right: 57px; width: auto; padding-top:0 ;}
	 footer .right > div { margin-right: 10px; width:10.4167vw ; height: 12.3698vw;}
	 footer .ft_style span, footer .ft_style em, footer .ft_style a, footer .ft_style b, footer .ft_style p{font-size:15px;}

    /* 2023-01-20 SNS 추가 */
     footer .left .f_info .info_sns {position:static; width: auto; padding-bottom:20px ;}
     footer .left .f_info .info_sns ul {margin: 0 auto; }
	 footer .left .f_info .info_sns li {width: 6.5104vw; height: 6.5104vw;}
	 footer .left .f_info .info_sns li a {width: 100%; height: 100%;}

	
}

@media (max-width: 600px){
	footer .left .f_info { padding-left: 15px; background-position: 15px 0;	}
	footer .right{right: 15px;}
}



@media (max-width: 480px){
	footer .left .f_info .privacy { margin-top: 20px; }
	footer .ft_style span, footer .ft_style em, footer .ft_style a, footer .ft_style b, footer .ft_style p{font-size:1.2rem; letter-spacing: -1px;}
}

@media (max-width: 360px){
	footer .left .f_info { padding-top: 44px; }
	footer .left .f_info .info_sns {padding-left: 5px;}
	footer .left .f_info .privacy span {font-size: 13px;}
	footer .right { top: 35px;	}
	footer .right > div { margin-right: 5px; }
}
